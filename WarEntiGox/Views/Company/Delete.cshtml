@model WarEntiGox.Models.Company

@{
    ViewData["Title"] = "Delete Company";
}

<h2>Delete Company</h2>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <p>@Model.Name</p>
    </div>

    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>

    <div class="form-group">
        <label>Address</label>
        <p>@Model.Address</p>
    </div>

    <div class="form-group">
        <label>Phone</label>
        <p>@Model.Phone</p>
    </div>

    <div class="form-group">
        <label>Email</label>
        <p>@Model.Email</p>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>
