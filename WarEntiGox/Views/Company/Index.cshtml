@model IEnumerable<WarEntiGox.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

<h2>Companies</h2>

<form method="get" asp-action="Index">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" placeholder="Search by company name" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Created Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var company in Model)
    {
        <tr>
            <td>@company.Name</td>
            <td>@company.CreateDate.ToString("dd/MM/yyyy")</td>
            <td>
                <a href="@Url.Action("Edit", "Company", new { id = company.Id.ToString() })">Edit</a> |
                <a href="@Url.Action("Delete", "Company", new { id = company.Id.ToString() })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
