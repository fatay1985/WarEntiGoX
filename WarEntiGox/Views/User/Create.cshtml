@model WarEntiGox.Models.User

@{
    ViewData["Title"] = "Kullanıcı Oluştur";
}

<h2>Kullanıcı Oluştur</h2>

<form method="post">
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" required />
    </div>

    <div class="form-group">
        <label for="PasswordHash">Şifre</label>
        <input type="password" class="form-control" id="PasswordHash" name="PasswordHash" value="@Model.PasswordHash" required />
    </div>

    <div class="form-group">
        <label for="CompanyId">Şirket</label>
        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies">
            <option value="">Şirket Seçin</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Role">Rol</label>
        <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
            <option value="">Rol Seçin</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Email">E-Posta</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model?.Email" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Telefon Numarası</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model?.PhoneNumber" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Geri Dön</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
