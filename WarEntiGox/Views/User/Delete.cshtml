@model WarEntiGox.Models.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h1>Kullanıcı Sil</h1>
<h3>Bu kullanıcıyı silmek istediğinizden emin misiniz?</h3>

<div>
    <h4>Kullanıcı Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Şirket ID</dt>
        <dd class="col-sm-10">@Model.CompanyId</dd>

        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Role</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
