@model WarEntiGox.Models.User

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<h2>Kullanıcı Düzenle</h2>

<form method="post">
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="UserName" name="UserName" value="@Model?.UserName" required />
    </div>

    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model?.Email" required />
    </div>

    <div class="form-group">
        <label for="PasswordHash">Şifre</label>
        <input type="password" class="form-control" id="PasswordHash" name="PasswordHash" value="@Model?.PasswordHash" required />
    </div>

    <div class="form-group">
        <label for="Role">Rol</label>
        <input type="text" class="form-control" id="Role" name="Role" value="@Model?.Role" required />
    </div>

    <div class="form-group">
        <label for="CompanyId">Şirket</label>
        <select class="form-control" id="CompanyId" name="CompanyId">
            <option value="">Şirket Seçin</option>
            @foreach (var company in ViewBag.Companies)
            {
                <option value="@company.CompanyId"
                        selected="@(company.CompanyId == Model.CompanyId ? "selected" : null)">
                    @company.Name
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
