@model IEnumerable<WarEntiGox.Models.User>

<h1>Kullanıcı Listesi</h1>
<p><a asp-action="Create" class="btn btn-primary">Yeni Kullanıcı Oluştur</a></p>

<table class="table">
    <thead>
    <tr>
        <th>Adı</th>
        <th>E-posta</th>
        <th>Rol</th>
        <th>Oluşturma Tarihi</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>@user.CreateDate.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
