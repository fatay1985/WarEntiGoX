<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WarEntiGox</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WarEntiGox.styles.css" asp-append-version="true"/>
    <style>
        body {
            background-color: #f7f7f7;
            display: -o-flex;
            place-items: center;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .login-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 25%;
            max-width: 600px;
        }
        .login-container h2 {
            text-align: center;
            margin-bottom: 10px;
        }
        .form-control {
            margin-bottom: 15px;
            border-radius: 4px;
        }
        .btn-primary {
            width: 25%;
            padding: 10px;
            border-radius: 4px;
        }
        .form-group label {
            font-weight: bold;
        }
        .alert {
            font-size: 14px;
            padding: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
